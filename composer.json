{
    "name": "szemul/config",
    "description": "Simple configuration engine supporting .env files and environment variables",
    "license": "MIT",
    "minimum-stability": "stable",
    "require": {
        "php": "^8.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0.0",
        "jetbrains/phpstorm-attributes": "^1.0",
        "josegonzalez/dotenv": "^3.2.0",
        "mockery/mockery": "^1.0",
        "phpstan/extension-installer": "^1.1.0",
        "phpstan/phpstan": "^0.12.80",
        "phpunit/phpunit": "^9.5.5"
    },
    "autoload": {
        "psr-4": {
            "Szemul\\Config\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Szemul\\Config\\Test\\": "tests"
        }
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    }
}
